---
import batikPattern from '../assets/images/organicPattern.webp';

const testimonials = [
  {
    id: 1,
    name: "Dewi Kartika",
    avatar: "https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg",
    text: "Kualitas batik yang luar biasa! Saya sangat puas dengan batik Parang Rusak yang saya beli. Motifnya detail dan warnanya tidak luntur meski sudah dicuci beberapa kali.",
    rating: 5
  },
  {
    id: 2,
    name: "Budi Santoso",
    avatar: "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg",
    text: "Batik yang saya pesan datang tepat waktu dan sesuai dengan foto. Bahannya nyaman dipakai dan motifnya unik. Akan berbelanja lagi di sini.",
    rating: 5
  },
  {
    id: 3,
    name: "Siti Nurhayati",
    avatar: "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg",
    text: "Sebagai kolektor batik, saya sangat mengapresiasi kualitas dan keotentikan dari Batik Karya Nusantara. Batik Sekar Jagad yang saya beli memiliki detail yang sangat halus.",
    rating: 5
  },
  {
    id: 4,
    name: "Andi Prasetyo",
    avatar: "https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg",
    text: "Pesanan saya tiba dalam kondisi sempurna dan dibungkus dengan rapi. Saya membeli untuk hadiah dan penerimanya sangat senang dengan kualitasnya.",
    rating: 4
  }
];
---

<section id="testimonial" class="py-20 bg-light relative">
  <!-- Batik Pattern Background (subtle) -->
  <div class="absolute inset-0 opacity-10 bg-repeat" style={`background-image: url(${batikPattern.src}})`}></div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Title -->
    <div class="text-center mb-12">
      <h2 class="font-playfair text-3xl md:text-4xl font-bold text-primary mb-2">Testimoni Pelanggan</h2>
      <p class="text-secondary max-w-2xl mx-auto">Apa kata pelanggan kami tentang produk batik berkualitas dari Batik Karya Nusantara</p>
      <div class="w-24 h-1 bg-primary mx-auto mt-4"></div>
    </div>

    <!-- Testimonial Swiper -->
    <div class="testimonial-swiper swiper overflow-hidden pb-12">
      <div class="swiper-wrapper">
        {testimonials.map(testimonial => (
          <div class="swiper-slide">
            <div class="bg-background rounded-lg p-6 shadow-md h-full flex flex-col">
              <!-- Stars -->
              <div class="flex mb-4">
                {Array(5).fill(0).map((_, index) => (
                  <svg xmlns="http://www.w3.org/2000/svg" class={`h-5 w-5 ${index < testimonial.rating ? "text-primary" : "text-gray-300"}`} viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Testimonial Text -->
              <p class="text-secondary mb-6 italic flex-grow">{testimonial.text}</p>

              <!-- User -->
              <div class="flex items-center mt-auto">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full object-cover mr-4"
                />
                <div>
                  <h4 class="font-playfair font-semibold text-primary">{testimonial.name}</h4>
                  <p class="text-secondary text-sm">Pelanggan</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Pagination -->
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>
