---
import batikParangRusak from '../assets/images/Baju/bajubatikparangrusak.webp';
import batikMegaMendung from '../assets/images/Baju/bajubatikmegamendung.webp';
import batikSekarJagad from '../assets/images/Baju/bajubatiksekarjagad.webp';
import batikKawung from '../assets/images/Baju/bajubatikkawung.webp';
import batikLasem from '../assets/images/Baju/bajubatiklasem.webp';
import batikSogan from '../assets/images/Baju/bajubatiksogan.webp';

const products = [
  {
    id: 1,
    name: "Batik Parang Rusak",
    price: "Rp 450.000",
    image: batikParangRusak.src,
    label: "Terlaris",
    description: "Batik tulis motif Parang Rusak dengan pewarna alami"
  },
  {
    id: 2,
    name: "Batik Mega Mendung",
    price: "Rp 350.000",
    image: batikMegaMendung.src,
    label: "Diskon 15%",
    description: "Batik cap motif Mega Mendung khas Cirebon"
  },
  {
    id: 3,
    name: "Batik Sekar Jagad",
    price: "Rp 550.000",
    image: batikSekarJagad.src,
    label: "",
    description: "Batik tulis motif Sekar Jagad dengan detail halus"
  },
  {
    id: 4,
    name: "Batik Kawung",
    price: "Rp 400.000",
    image: batikKawung.src,
    label: "Baru",
    description: "Batik cap motif Kawung klasik Yogyakarta"
  },
  {
    id: 5,
    name: "Batik Lasem",
    price: "Rp 650.000",
    image: batikLasem.src,
    label: "Edisi Terbatas",
    description: "Batik tulis Lasem dengan warna merah khas"
  },
  {
    id: 6,
    name: "Batik Sogan",
    price: "Rp 475.000",
    image: batikSogan.src,
    label: "",
    description: "Batik klasik dengan warna sogan khas Solo"
  }
];

// WhatsApp message template
const waBaseUrl = "https://wa.me/628123456789?text=";
---

<section id="produk" class="py-20 bg-background">
  <div class="container mx-auto px-4">
    <!-- Section Title -->
    <div class="text-center mb-12">
      <h2 class="font-playfair text-3xl md:text-4xl font-bold text-primary mb-2">Koleksi Produk</h2>
      <p class="text-secondary max-w-2xl mx-auto">Temukan keindahan motif batik tradisional dengan sentuhan modern yang cocok untuk berbagai kesempatan</p>
      <div class="w-24 h-1 bg-primary mx-auto mt-4"></div>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map(product => (
        <div class="group bg-light rounded-lg overflow-hidden shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-xl animate-fade-in">
          <!-- Product Image Container -->
          <div class="relative overflow-hidden h-64">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />

            <!-- Product Label (if exists) -->
            {product.label && (
              <div class="absolute top-4 right-4 bg-primary text-light px-3 py-1 rounded-full text-sm font-medium">
                {product.label}
              </div>
            )}
          </div>

          <!-- Product Info -->
          <div class="p-6">
            <h3 class="font-playfair text-xl font-semibold text-primary mb-2">{product.name}</h3>
            <p class="text-secondary mb-4 text-sm">{product.description}</p>
            <div class="flex justify-between items-center">
              <p class="font-bold text-primary">{product.price}</p>
              <a
                href={`${waBaseUrl}Halo, saya tertarik dengan ${product.name} seharga ${product.price}. Apakah masih tersedia?`}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-primary hover:bg-opacity-90 text-light px-4 py-2 rounded-md text-sm transition-colors duration-300"
              >
                Pesan Sekarang
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- View More Button -->
    <div class="text-center mt-12">
      <a
        href="#"
        class="inline-block border-2 border-primary text-primary hover:bg-primary hover:text-light font-medium px-8 py-3 rounded-md transition-colors duration-300"
      >
        Lihat Semua Produk
      </a>
    </div>
  </div>
</section>
