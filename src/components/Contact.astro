<style>
  .message-fade-out {
    transition: opacity 0.5s ease-out;
    opacity: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById(
      'contact-form'
    ) as HTMLFormElement | null;
    const submitBtn = document.getElementById(
      'submit-btn'
    ) as HTMLButtonElement | null;
    const btnText = document.getElementById('btn-text');
    const btnLoading = document.getElementById('btn-loading');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');

    if (
      !form ||
      !submitBtn ||
      !btnText ||
      !btnLoading ||
      !successMessage ||
      !errorMessage
    ) {
      console.warn('Contact form elements not found');
      return;
    }

    function autoHideMessage(element: HTMLElement, delay: number = 5000) {
      setTimeout(() => {
        element.classList.add('message-fade-out');
        setTimeout(() => {
          element.classList.add('hidden');
          element.classList.remove('message-fade-out');
        }, 500); // 500ms untuk fade-out animation
      }, delay);
    }

    form.addEventListener('submit', async function (e) {
      e.preventDefault();

      if (submitBtn) submitBtn.disabled = true;
      btnText.classList.add('hidden');
      btnLoading.classList.remove('hidden');

      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            Accept: 'application/json',
          },
        });

        if (response.ok) {
          successMessage.classList.remove('hidden');
          form.reset();
          successMessage.scrollIntoView({
            behavior: 'smooth',
            block: 'center',
          });

          autoHideMessage(successMessage, 5000);
        } else {
          throw new Error('Network response was not ok');
        }
      } catch (error) {
        console.error('Form submission error:', error);

        errorMessage.classList.remove('hidden');
        errorMessage.scrollIntoView({
          behavior: 'smooth',
          block: 'center'
        });

        autoHideMessage(errorMessage, 7000);
      } finally {
        if (submitBtn) submitBtn.disabled = false;
        btnText.classList.remove('hidden');
        btnLoading.classList.add('hidden');
      }
    });
  });
</script>
